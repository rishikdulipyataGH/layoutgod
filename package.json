{
  "name": "keyboard-layout-god",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "description": "The ultimate keyboard layout analyzer - designed and developed by Rishik Dulipyata",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "npm run dev --workspace=server",
    "client:dev": "npm start --workspace=client",
    "build": "npm run build --workspace=client",
    "start": "npm start --workspace=server",
    "migrate": "npm run migrate --workspace=server",
    "seed": "npm run seed --workspace=server",
    "install:all": "npm install",
    "clean": "npm run clean --workspaces --if-present && rimraf node_modules"
  },
  "keywords": [
    "keyboard",
    "layout",
    "typing",
    "ergonomics",
    "qwerty",
    "dvorak",
    "colemak",
    "analyzer"
  ],
  "author": "Rishik Dulipyata",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
